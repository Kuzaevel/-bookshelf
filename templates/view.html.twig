<div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
        <div class="panel-body">
            <form action="#" method="" >
                <div class="form-group">
                    <label for="name" >Name</label>
                    <input type="text" class="form-control" name="name" value="{{ book.name }}" disabled="true">
                </div>
                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" name="author" value="{{ book.author }}" disabled="true">
                </div>
                <div class="form-group">
                    <label for="genre">Genre</label>
                    <input type="text" class="form-control" name="genre" value="{{ book.genre }}" disabled="true">
                </div>
                <div class="form-group">
                    <label for="year">Year</label>
                    <input type="text" class="form-control" name="year" value="{{ book.year }}" disabled="true">
                </div>
                <button class="btn btn-primary btn-lg btn-block btn-back-to-table">BOOKS Table</button>
            </form>
        </div>
    </div>
 </div>

